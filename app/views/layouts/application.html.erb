<!DOCTYPE html> 
<html> 
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta http-equiv="Content-Language" content="zh-cn" />
  <meta name="robots" content="all" />
  <meta name="author" content="inruby" />
  <meta name="Copyright" content="Inruby Lcd, All Rights Reserved." />
  <title><%= yield(:title) %> </title>
  <meta name="keywords" content="<%= yield(:meta_keywords)%>" />
  <meta name="description" content="<%= yield(:meta_description)%>" />
    
  <%= stylesheet_link_tag    "application" %>
  <% if request['controller'] == 'home' %>
    <%= stylesheet_link_tag    "home" %>
  <% end %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">
    $(document).ready(function(){
      // $("#top_banner_flip").mouseover(function(){
      //   $("#top_banner").slideToggle("slow");
      // });

      //slide show 
      $('#slider_teacher_1').sliders({ delay: 4500, speed: 800, ease: 'swing' });
      $('#slider_teacher_2').sliders({ delay: 4500, speed: 800, ease: 'swing' });
    });
  </script>
  <!--[if lt IE 7]>
    <link href="/assets/ie_style.css" rel="stylesheet" type="text/css" />
  <![endif]-->

</head> 

<body screen_capture_injected="true">
  <%=render :partial => "layouts/header" %>
  <div id="bodyPan">
    <% if request['controller'] == 'home' %>
      <%= yield %>
    <% else %>
      <div id="bodyleftPan">
        <%= yield %>
      </div>
      <div id="bodyrightPan">
        <%=render :partial => "layouts/aside" %>
        <%= yield :aside %>
      </div>
    <% end %>
  </div>
  <%=render :partial => "layouts/footer" %>
</body>
</html>